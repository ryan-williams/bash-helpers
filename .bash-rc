#!/usr/bin/env bash

source "$(dirname "${BASH_SOURCE[0]}")"/vars/.vars-rc

alias xt=exit

alias ma=mk-alias
alias mka=mk-alias
defn ua unalias
defn us unset
defn usf unset -f

# Sourcing
alias resource="source ~/.bashrc"
alias rsrc="source ~/.bashrc"
alias src="source ~/.bashrc"
alias rs="source ~/.bashrc"
alias rsrs="source ~/.bashrc"
alias rbp="source ~/.bash_profile"
alias rsbp="source ~/.bash_profile"

alias hshr="hash -r"

pull_remote_source() {
    pushd ~/.rc || return 1
    git pull --rebase && git submodule update --init --recursive && source "$HOME/.bashrc"
    popd || return 2
}
alias prs=pull_remote_source
alias rsrr=pull_remote_source

export dn=/dev/null

append_to PKG_CONFIG_PATH "$HOME/lib" "$HOME/lib64"

mv_createdir() {
    last="${!#}"
    rest=("${@:1:$#-1}")
    if [ "${last: -1}" == "/" ]; then
        dstdir="$last"
    else
        dstdir="$(dirname "$last")"
    fi
    echo "last=$last" >&2
    echo "dstdir=$dstdir" >&2
    if [ "$dstdir" != "$last" ]; then
        echo "Making directory $dstdir" >&2
        mkdir -p "$dstdir"
    fi
    mv "$@"
}
export -f mv_createdir
defn mvc mv_createdir

defn rmf rm -f
defn rmrf rm -rf

defn dfh df -h
cmi() {
  ./configure "--prefix=$HOME" "$@" && make && make install
}
export -f cmi

defn tcmi tar-extract-configure-make-install

defn m man

cd_cat() {
  if [ $# -eq 0 ]; then
    pushd ~ || return 1
  elif [ -d "$1" ]; then
    pushd "$1" || return 2
  else
    cat "$@"
  fi
}
export -f cd_cat
defn c cd_cat

alias s=cat
alias cv="cat -v"

defn cpr cp -r

err() {
	echo "$@" >&2
}
export -f err

die() {
	err "$1"
	shift
	return "${1:-1}"
}
export -f die

toggle_ifs() {
    export verbose=
    if [ $# -gt 0 ] && [ "$1" == "-v" ]; then
      verbose=1
    fi

    if [ "$IFS" == $'\n' ]; then
      if [ -z "$OLD_IFS" ]; then
        echo "ERROR: No OLD_IFS set" >&2
        exit 1
      else
        export IFS="$OLD_IFS"
        echo "\$IFS restored"
      fi
    else
      export OLD_IFS="$IFS"
      export IFS=$'\n'
      echo '\$IFS now \n' >&2
    fi

}
export -f toggle_ifs
alias bak-ifs=toggle_ifs
alias ifs="toggle_ifs"

pswd() {
  if [ $# -eq 0 ]; then
    num=30
  else
    num="$1"; shift
  fi
  perl -pe 's/[^0-9a-zA-Z]//g' /dev/urandom | head -c "$num"
}
export -f pswd

export HISTCONTROL=ignorespace

alias wn="watch -n"
alias w1="watch -n1"
alias w2="watch -n2"
alias w3="watch -n3"
alias w5="watch -n5"
alias wn2="watch -n2"
alias wn3="watch -n3"
alias wn5="watch -n5"
